<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PublishAot>False</PublishAot>
    <InvariantGlobalization>true</InvariantGlobalization>
    <RootNamespace>Smusdi.GherkinToMarkdown</RootNamespace>
    <PackageId>Smusdi.GherkinToMarkdown</PackageId>
    <PackAsTool>True</PackAsTool>
    <ToolCommandName>gherkin-to-markdown</ToolCommandName>
    <IsPackable>true</IsPackable>
    <Authors>LION Marc</Authors>
    <PackageDescription>Simple tool to create markdown from gherkin..</PackageDescription>
    <RepositoryUrl>https://github.com/LionMarc/gherkin-to-markdown</RepositoryUrl>
    <PackageProjectUrl>https://github.com/LionMarc/gherkin-to-markdown</PackageProjectUrl>
  </PropertyGroup>

</Project>
